# Plugin
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'dracula/tmux'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'jimeh/tmuxifier'

# Dracula
# set -g @dracula-plugins "time"
# set -g @dracula-show-powerline true
# set -g @dracula-show-left-icon session
# set -g @dracula-left-icon-padding 0
# set -g @dracula-time-format "%a, %b %e - %l:%M %p"
set -g status-position top

# Enable Mouse (For Scrolling up in terminal)
set -g mouse on

# Idk man
# set -g default-terminal 'tmux-256color'

# Windows start at 1
set -g base-index 1
set -g renumber-windows on
# Use System Clipboard [Broken]
set -g set-clipboard on

# Remove delay on escape
set -sg escape-time 0

# Remaps

# Unbind Everything
# for table in prefix root copy-mode copy-mode-vi; do
#     tmux unbind -a -T "$table"
# done

# Set Prefix
# unbind C-b
set -g prefix C-Space
bind C-Space send-prefix

# Split pane in current path
bind '"' split-window -v -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"

# x - close window
# o - open window
# r - rename window
unbind r
bind-key r command-prompt -I "#W" "rename-window '%%'"

run '~/.tmux/plugins/tpm/tpm'
